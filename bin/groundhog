#!/usr/bin/env node
'use strict';

var fs = require('fs'),
    path = require('path'),
    argh = require('argh'),
    _ = require('underscore'),
    groundhog = require('../lib');

var options = {
        record: argh.argv.record,
        playback: argh.argv.playback,
        dir: argh.argv.dir,
        hostname: argh.argv.hostname,
        strict: argh.argv.strict,
        port: argh.argv.port
    },
    configFilename;

if (argh.argv.config) {
    configFilename = argh.argv.config;
} else if (fs.existsSync(path.join(process.cwd(), '.groundhog.json'))) {
    configFilename = path.join(process.cwd(), '.groundhog.json');
}


var config = fs.readFileSync(configFilename);
if (config) {
    _.extend(options, JSON.parse(config));
} else {
    throw new Error('Config file: ' + configFilename + ' could not be found.');
}

if (argh.argv.help || argh.argv.h || !options.dir || !(options.hostname || options.proxies)) {
    usage();
}

groundhog.run(options);

function usage() {
    console.log('Usage: groundhog [--record [name]]');
    console.log('Attempts to load configuration options from a ".groundhog.json" if it exists in the current working directory.');
    console.log('--record        record the current session - if a value is provided then the recording file is given that name\n\n');


    console.log('Config');
    console.log('--config        load the options from a config file specified');
    console.log('--playback      playback the recordings from a specific recording file (default: the last recording created)');
    console.log('--hostname      host to which to proxy requests');
    console.log('--dir           directory in which to read/write playback files');
    console.log('--port          port to listen on (default: 3001)');
    console.log('--protocol      protocol to run (default: http)');
    console.log('--strict        only serve recordings in playback mode');

    process.exit();
}
